{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "NACLs",
  "Parameters": {
    "VPCIdentifier": {
      "Type": "String",
      "Description": "Specify the VPC Identifier - This is only to be used if more than one VPC is being deployed into the account",
      "Default": ""
    }
  },
  "Resources": {
    "NetworkAcl": {
      "Type": "AWS::EC2::NetworkAcl",
      "Properties": {
        "VpcId": {
          "Fn::ImportValue": {
            "Fn::Sub": "VPC${VPCIdentifier}"
          }
        },
        "Tags": [
          {
            "Key": "Name",
            "Value": "Default NACL"
          }
        ]
      }
    },
    "NetworkAclEntryInbound": {
      "Type": "AWS::EC2::NetworkAclEntry",
      "Metadata": {
        "Purpose": "Allow Inbound"
      },
      "Properties": {
        "CidrBlock": "0.0.0.0/0",
        "Egress": false,
        "NetworkAclId": {
          "Ref": "NetworkAcl"
        },
        "Protocol": -1,
        "RuleAction": "allow",
        "RuleNumber": 100
      }
    },
    "NetworkAclEntryOutbound": {
      "Type": "AWS::EC2::NetworkAclEntry",
      "Metadata": {
        "Purpose": "Allow Outbound"
      },
      "Properties": {
        "CidrBlock": "0.0.0.0/0",
        "Egress": true,
        "NetworkAclId": {
          "Ref": "NetworkAcl"
        },
        "Protocol": -1,
        "RuleAction": "allow",
        "RuleNumber": 100
      }
    },
    "ControlledASubnetNetworkAclAssociation": {
      "Type": "AWS::EC2::SubnetNetworkAclAssociation",
      "Properties": {
        "SubnetId": {
          "Fn::ImportValue":  {
            "Fn::Sub": "ControlledASubnet${VPCIdentifier}"
          }
        },
        "NetworkAclId": {
          "Ref": "NetworkAcl"
        }
      }
    },
    "ControlledBSubnetNetworkAclAssociation": {
      "Type": "AWS::EC2::SubnetNetworkAclAssociation",
      "Properties": {
        "SubnetId": {
          "Fn::ImportValue": {
            "Fn::Sub": "ControlledBSubnet${VPCIdentifier}"
          }
        },
        "NetworkAclId": {
          "Ref": "NetworkAcl"
        }
      }
    },
    "ControlledCSubnetNetworkAclAssociation": {
      "Type": "AWS::EC2::SubnetNetworkAclAssociation",
      "Properties": {
        "SubnetId": {
          "Fn::ImportValue": {
            "Fn::Sub": "ControlledCSubnet${VPCIdentifier}"
          }
        },
        "NetworkAclId": {
          "Ref": "NetworkAcl"
        }
      }
    },
    "RestrictedASubnetNetworkAclAssociation": {
      "Type": "AWS::EC2::SubnetNetworkAclAssociation",
      "Properties": {
        "SubnetId": {
          "Fn::ImportValue": {
            "Fn::Sub": "RestrictedASubnet${VPCIdentifier}"
          }
        },
        "NetworkAclId": {
          "Ref": "NetworkAcl"
        }
      }
    },
    "RestrictedBSubnetNetworkAclAssociation": {
      "Type": "AWS::EC2::SubnetNetworkAclAssociation",
      "Properties": {
        "SubnetId": {
          "Fn::ImportValue": {
            "Fn::Sub": "RestrictedBSubnet${VPCIdentifier}"
          }
        },
        "NetworkAclId": {
          "Ref": "NetworkAcl"
        }
      }
    },
    "RestrictedCSubnetNetworkAclAssociation": {
      "Type": "AWS::EC2::SubnetNetworkAclAssociation",
      "Properties": {
        "SubnetId": {
          "Fn::ImportValue": {
            "Fn::Sub": "RestrictedCSubnet${VPCIdentifier}"
          }
        },
        "NetworkAclId": {
          "Ref": "NetworkAcl"
        }
      }
    },
    "SecuredASubnetNetworkAclAssociation": {
      "Type": "AWS::EC2::SubnetNetworkAclAssociation",
      "Properties": {
        "SubnetId": {
          "Fn::ImportValue": {
            "Fn::Sub": "SecuredASubnet${VPCIdentifier}"
          }
        },
        "NetworkAclId": {
          "Ref": "NetworkAcl"
        }
      }
    },
    "SecuredBSubnetNetworkAclAssociation": {
      "Type": "AWS::EC2::SubnetNetworkAclAssociation",
      "Properties": {
        "SubnetId": {
          "Fn::ImportValue": {
            "Fn::Sub": "SecuredBSubnet${VPCIdentifier}"
          }
        },
        "NetworkAclId": {
          "Ref": "NetworkAcl"
        }
      }
    }
  }
}