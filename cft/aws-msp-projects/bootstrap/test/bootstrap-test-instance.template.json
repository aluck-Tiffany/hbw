{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "Launch EC2 Instance to test BootStrap API and Risk Dashboard based on OS version",
  "Parameters": {
    "BaseUrl": {
      "Type": "String",
      "Default": "luv.hcs.datacom.com.au"
    },
    "OS": {
      "Type": "String",
      "AllowedValues": [
        "windows2016",
        "windows2012r2",
        "windows2012",
        "windows2008r2",
        "amazon-linux1",
        "rhel-7"
      ]
    },
    "EnforceMode": {
      "Type": "String",
      "AllowedValues": ["enforce", "report"]
    },
    "CostCentre": {
      "Type": "String",
      "Default": "management"
    }
  },
  "Conditions": {
    "isLinux": {
      "Fn::Or": [{
          "Fn::Equals": [{
              "Ref": "OS"
            },
            "amazon-linux1"
          ]
        },
        {
          "Fn::Equals": [{
              "Ref": "OS"
            },
            "rhel-7"
          ]
        }
      ]
    }
  },
  "Mappings": {
    "OSSettingMap": {
      "windows2016": {
        "InstanceType": "m4.large",
        "ImageId": "ami-02e3986f071e14a71"
      },
      "windows2012r2": {
        "InstanceType": "m4.large",
        "ImageId": "ami-0d5ee30b3c177dc50"
      },
      "amazon-linux1": {
        "InstanceType": "t2.small",
        "ImageId": "ami-0a4024041be0a4f1f"
      },
      "rhel-7": {
        "InstanceType": "t2.small",
        "ImageId": "ami-024d354e9486f906f"
      }
    }
  },
  "Resources": {
    "EC2Instance": {
      "Type": "AWS::EC2::Instance",
      "Properties": {
        "KeyName": {
          "Ref": "AWS::AccountId"
        },
        "ImageId": {
          "Fn::FindInMap": ["OSSettingMap", {
            "Ref": "OS"
          }, "ImageId"]
        },
        "InstanceType": {
          "Fn::FindInMap": ["OSSettingMap", {
            "Ref": "OS"
          }, "InstanceType"]
        },
        "SecurityGroupIds": [{
          "Fn::ImportValue": "ManagementSecurityGroup"
        }],
        "SubnetId": {
          "Fn::ImportValue": "RestrictedASubnet"
        },
        "Tags": [{
            "Key": "Name",
            "Value": {
              "Fn::Join": [
                "", [
                  "bootstrap-test-",
                  {
                    "Ref": "OS"
                  }
                ]
              ]
            }
          },
          {
            "Key": "CIS",
            "Value": {
              "Ref": "EnforceMode"
            }
          },
          {
            "Key": "CostCentre",
            "Value": {
              "Ref": "CostCentre"
            }
          }
        ],
        "UserData": {
          "Fn::If": [
            "isLinux",
            {
              "Fn::Base64": {
                "Fn::Join": [
                  "", [
                    "#!/bin/bash\n",
                    "curl https://bootstrap.",
                    {
                      "Ref": "BaseUrl"
                    },
                    "/latest/default?os=",
                    {
                      "Ref": "OS"
                    },
                    "\\&cis=",
                    {
                      "Ref": "EnforceMode"
                    },
                    " -o /tmp/bootstrap.sh\n",
                    "chmod 755 /tmp/bootstrap.sh\n",
                    "/tmp/bootstrap.sh\n"
                  ]
                ]
              }
            },
            {
              "Fn::Base64": {
                "Fn::Join": [
                  "", [
                    "<powershell>\n",
                    "Invoke-WebRequest \"https://bootstrap.",
                    {
                      "Ref": "BaseUrl"
                    },
                    "/latest/default?os=",
                    {
                      "Ref": "OS"
                    },
                    "&cis=",
                    {
                      "Ref": "EnforceMode"
                    },
                    "\" -OutFile $env:temp\\bootstrap.ps1; Invoke-Expression -Command \"$env:temp\\bootstrap.ps1\"\n",
                    "</powershell>"
                  ]
                ]
              }
            }
          ]
        }
      }
    }
  }
}